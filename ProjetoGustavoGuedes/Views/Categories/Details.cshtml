@model Model.Tables.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Category details";
}
<div class="panel	panel-primary">
    <div class="panel-heading">
        Category details
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer	panel-info">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }, new { @class = "btn	btn-info" })
        @Html.ActionLink("Return to Index", "Index", null, new { @class = "btn	btn-info" })
    </div>
</div>
@Html.Partial("~/Views/Product/_ByCategory.cshtml", Model.products.ToList())
@section	ScriptPage	{
    <script type="text/javascript">
$(document).ready(function () {$('li').removeClass("active");$('#liCategory').addClass("active");});
    </script>
}
